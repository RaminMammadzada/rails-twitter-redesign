<div class="container">
  <div class="d-flex flex-row align-items-center justify-content-center my-3">
    <h6>WHO TO FOLLOW</h6>
    <i class="fas fa-sync-alt a-2x ml-4"></i>
  </div>

  <div class="d-flex flex-column">
    <% gel_all_unfollowed_users.each do |user| %>
      <div class="container bg-light my-2">
        <div class="d-flex flex-row align-items-center">
          <div class="mr-3 flex-shrink-1 ">
            <%= image_tag user.photo.url(:thumb), :class => "rounded-circle" %>
          </div>
          <div class="d-flex flex-column ml-3 fullname-in-right-sidebar">
            <div class="">
              <h5><%= link_to user.fullname, user_path(user.id), :class => ""%> </h5>
            </div>
            <div class="d-flex flex-column">
              <% if first_follower(user) %>
              <p>Followed by <%= link_to first_follower(user), user_path(user.id), :class => "text-primary"%> </p>
              <% end%>
              <%= follow_button(user) %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>

