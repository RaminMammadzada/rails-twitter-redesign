<div class="text-dark">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="d-flex flex-row align-items-baseline field">
      <%= form.label :username %>
      <%= form.text_field :username, :class => "form-control ml-3" %>
    </div>

    <div class="d-flex flex-row align-items-baseline field">
      <%= form.label :fullname %>
      <%= form.text_field :fullname, :class => "form-control ml-3" %>
    </div>


    <div class="d-flex flex-row align-items-baseline field">
      <%= form.label :photo %>
      <%= form.file_field :photo, :class => "form-control ml-3" %>
    </div>

    <div class="d-flex flex-row align-items-baseline field">
      <%= form.label :cover_image %>
      <%= form.file_field :cover_image, :class => "form-control ml-3" %>
    </div>

    <div class="actions d-flex flex-row justify-content-between">
      <%= form.submit :class => "btn btn-primary" %>

      <% if !current_user %>
      <div class="d-flex align-items-baseline">
        <p class="mr-2">go back to </p>
        <%= link_to "Log In", login_url, :class => "btn btn-primary text-white" %>
      </div>
      <% end %>

    </div>


  <% end %>

</div>